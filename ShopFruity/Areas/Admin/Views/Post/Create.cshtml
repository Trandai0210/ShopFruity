@model ShopFruity.Model.Entities.Post
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<form asp-area="Admin" asp-controller="Post" asp-action="Create">
    <div class="form-group">
        <label asp-for="PostId"></label>
        <input asp-for="PostId" class="form-control"></input>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"></input>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control"></input>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control"></input>
    </div>
    <div class="form-group">
        <label asp-for="MetaKeyWord"></label>
        <input asp-for="MetaKeyWord" class="form-control"></input>
    </div>
    <div class="form-group">
        <label asp-for="MetaDescription"></label>
        <input asp-for="MetaDescription" class="form-control"></input>
    </div>
    <div class="card card-outline card-info">
        <div class="card-header">
            <h3 class="card-title">
                Content
            </h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <textarea id="summernote" asp-for="Content">
                
              </textarea>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Tạo</button>
    </div>
</form>
