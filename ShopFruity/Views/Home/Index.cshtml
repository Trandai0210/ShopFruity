<div class="product text-center container">
    <h2 class="" style="font-size: 50px;font-weight: bold;">Lastest Products</h2>
    <p class="pb-5" style="font-style: 20px !important;color: #92ad6a;">__________________________________________________</p>
    <div class="row products justify-content-around mx-0">
        @foreach (var item in Model)
        {
            <div class="product_item">
                <img src="@item.Image" height="235.8px" width="235.8px" alt="">
                <h3 class="product_item-name" style="font-size:20px !important;">@item.Name</h3>
                <p class="product_item-price money">@item.Price</p>
                <div class="product_item-btn d-none">
                    <a onclick="AddToCart('@item.ProductId')" class="btn btn-add"><i class="fa-solid fa-cart-plus"></i></a>
                    <a href="/Product/Details/@item.ProductId" class="btn btn-view"><i class="fa-solid fa-eye"></i></a>
                </div>
            </div>
        }
    </div>
    <a class="btn btn-see-more" href="/Product">See more</a>
</div>
