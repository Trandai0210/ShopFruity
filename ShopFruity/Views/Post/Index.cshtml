@model List<ShopFruity.Model.Entities.Post>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Star -->
<div class="container-fluid px-0" style="margin-top: 80px;background: url(/client/img/banner.jpg);">
    <div style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="text-center" style="padding: 100px 0;">
            <h1 style="font-size: 60px;color: white;font-weight: bold;">Post</h1>
            <p class="text-white" style="font-size: 20px;">Home <i class="fa-solid fa-caret-right"></i> <span style="color: #92ad6a;">Post</span></p>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Product Star-->
<div class="container pb-5">
    @foreach (var item in Model)
    {
        <div class="row mt-5">
            <div class="col-md-4">
                <img src="@item.Image" class="img-fluid" alt="Alternate Text" />
            </div>
            <div class="col-md-7">
                <a href="/Post/Details/@item.PostId" style="font-size:30px !important;font-weight:bold;color:#333333 !important;">Cherry Mỹ Năm 2022</a>
                <p style="font-size:18px !important;font-weight:bold;color:#333333 !important">@item.Description</p>
                <p style="font-size:16px !important;font-weight:bold;" class="text-secondary">Ngày tạo: @item.CreatedDate</p>
                <p style="font-size:16px !important;font-weight:bold;" class="text-secondary">Lượt xem: @item.ViewCount</p>
            </div>
        </div>
    }
</div>

