@model ShopFruity.Model.Entities.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-top:120px">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Image" class="img-fluid" alt="Img Product" />
            </div>
            <div class="col-md-8 position-relative">
                <h2 style="font-size:40px !important;">@Model.Name</h2>
                <p style="font-size:20px !important">@Model.Description</p>
                <p style="font-size:20px !important" class="fs-20 money">@Model.Price</p>
                <button style="font-size:20px !important" class="btn btn-primary" onclick="AddToCart('@Model.ProductId')" style="position:absolute;bottom:0;">Thêm vào giỏ hàng</button>
            </div>
        </div>
        <div class="row mt-5">
            <h2 class="text-center"  style="font-size:40px !important">Mô tả sản phẩm</h2>
            <div id="Product-content" style="font-size:20px !important">@Model.Content</div>
        </div>
    </div>
</div>

<!-- Why Start -->
<div class="container py-5 my-5">
    <div class="row pt-5">
        <div class="col-4 row">
            <div class="col-2 pt-3">
                <i class="fa-solid fa-cart-plus" style="font-size: 40px;color: orange;"></i>
            </div>
            <div class="col-10">
                <h3 style="font-size: 40px !important;">Easy to Order</h3>
                <p style="font-size: 20px;" class="text-secondary pe-5">Enjoy the convenience of your shopping with the various feafutures available.</p>
            </div>
        </div>
        <div class="col-4 row">
            <div class="col-2 pt-3">
                <i class="fa-solid fa-truck-fast" style="font-size: 40px;color: blue;"></i>
            </div>
            <div class="col-10">
                <h3 style="font-size: 40px !important;">Fast Delivery</h3>
                <p style="font-size: 20px;" class="text-secondary pe-5">We offer the fastest delivery at your location we will ship within 30 min.</p>
            </div>
        </div>
        <div class="col-4 row">
            <div class="col-2 pt-3">
                <i class="fa-solid fa-credit-card" style="font-size: 40px;color: green;"></i>
            </div>
            <div class="col-10">
                <h3 style="font-size: 40px !important;">Secure Payment</h3>
                <p style="font-size: 20px;" class="text-secondary pe-5">Enjoy the convenience of your shopping with the various feafutures available</p>
            </div>
        </div>
    </div>
</div>
<!-- Why End -->

